Console.WriteLine("Guess the number I'm thinking about");
            Console.WriteLine("I'll give you a small hint. It's  number between 1 and 30");
            Console.WriteLine("You can guess up to 5 times,otherwise it's game over be careful!");

            int playernum = Int32.Parse(Console.ReadLine());
            Random rnd = new Random();
            int num = rnd.Next(1, 30);
            bool result = false;
            int times = 5;


            while (times != 0)
            {
                if (playernum == num)


                {
                    result = true;
                    Console.WriteLine("Very good,that's the one");
                    Console.WriteLine("You guessed " + result);
                  
                    break;







                }
                else if (playernum != num)

                {
                    times = times - 1;
                    result = false;
                    Console.WriteLine("Not the one I was thinking about. Your guess was " + result);
                    if (playernum < num)
                    {
                        Console.WriteLine("Try picking a higher number");
                    }


                    else if (playernum > num)
                    {

                        Console.WriteLine("Try picking a lower number");

                    }
                    Console.WriteLine("You have " + times + " guesses left");
                    if (times != 0)
                    {
                        num = Convert.ToInt32(Console.ReadLine());
                    }
                    
                }
            }
            if (times == 0 )
            {
                Console.WriteLine("Sorry but the correct number is " + num);
                Console.WriteLine("I'm sure you'll do better next time");
            }
