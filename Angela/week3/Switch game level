
using System;

namespace Enumeration_Angela
{
    class Program
    {
        // create enumeration
        enum difficulty { Easy, Medium, Hard };
        static void Main(string[] args)
        {


            Console.WriteLine("Enter your game level! \n 1. Easy \n 2. Medium \n 3. Hard");
            int Level = Int32.Parse(Console.ReadLine());
            switch(Level)
            {
                case 1:
                Console.WriteLine("You have very basic level" );
                break;
               

                case 2:
                    Console.WriteLine("You have medium level");
                break;



                case 3:
                    Console.WriteLine("You have hard level");
                break;
                default:
                    Console.WriteLine("Unknown error");
                    break;

            }
        }
    }
}
